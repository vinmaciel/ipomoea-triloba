<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center" >
    
    <Button
        android:id="@+id/home_market_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/market_button" />
    
    <Button
        android:id="@+id/home_decks_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/decks_button" />
    
    <Button
        android:id="@+id/home_cards_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cards_button" />
    
    <Button
        android:id="@+id/home_trade_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trade_button" />
    
</LinearLayout>
